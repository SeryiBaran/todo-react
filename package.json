{
  "name": "todo-react",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint:css": "stylelint './src/**/*.css'",
    "lint:js": "eslint ./src/**/*",
    "lint:js:fix": "eslint ./src/**/* --fix",
    "lint": "npm run lint:js && npm run lint:css",
    "format": "prettier --write ./src/**/*",
    "csssort": "postcss ./src/**/*.css --replace --config package.json --no-map",
    "cssprefix": "postcss ./dist/**/*.css --replace --use autoprefixer --config package.json --no-map",
    "prod": "npm run format && npm run lint && npm run csssort && npm run build && npm run cssprefix"
  },
  "dependencies": {
    "@popperjs/core": "^2.11.6",
    "bootstrap": "^5.2.2",
    "effector": "^22.3.0",
    "effector-react": "^22.3.3",
    "effector-storage": "^5.0.1",
    "react": "^18.2.0",
    "react-bootstrap": "^2.5.0",
    "react-dom": "^18.2.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.0.21",
    "@types/react-dom": "^18.0.6",
    "@types/uuid": "^8.3.4",
    "@vitejs/plugin-react": "^2.1.0",
    "stylelint": "^14.14.0",
    "stylelint-prettier": "^2.0.0",
    "stylelint-config-recommended": "^9.0.0",
    "postcss": "^8.4.18",
    "postcss-cli": "^10.0.0",
    "prettier": "^2.7.1",
    "css-declaration-sorter": "^6.3.1",
    "typescript": "^4.8.4",
    "@typescript-eslint/eslint-plugin": "^5.40.1",
    "@typescript-eslint/parser": "^5.40.1",
    "eslint": "^8.25.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.31.10",
    "autoprefixer": "^10.4.12",
    "vite": "^3.1.8"
  },
  "postcss": {
    "map": false,
    "plugins": {
      "css-declaration-sorter": {
        "order": "smacss"
      }
    }
  }
}
